<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>miniproject login</title>
        <link href="../stylesheets/borderOne.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <h2 id="title">게시글 작성</h2>
            </div>
            <div class="row">
                <div class="widget-area no-padding blank">
                    <div class="status-upload">
                        <input class="aa" value="작성자" />
                        <br />
                        <input class="aa" value="제목" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="widget-area no-padding blank">
                        <div class="status-upload">
                            <form>
                                <textarea placeholder="여러가지 주제로 대화를 나눠요!"></textarea>
                                <ul>
                                    <li>
                                        <a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Audio"><i class="fa fa-music"></i></a>
                                    </li>
                                    <li>
                                        <a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Video"
                                            ><i class="fa fa-video-camera"></i
                                        ></a>
                                    </li>
                                    <li>
                                        <a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Sound Record"
                                            ><i class="fa fa-microphone"></i
                                        ></a>
                                    </li>
                                    <li>
                                        <a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Picture"
                                            ><i class="fa fa-picture-o"></i
                                        ></a>
                                    </li>
                                </ul>
                                <button id="homeBtn" class="btn btn-success green"><i class="fa fa-share">홈으로</i></button>
                                <button id="saveBtn" class="btn btn-success green"><i class="fa fa-share">저장</i></button>
                            </form>
                        </div>
                        <!-- Status Upload  -->
                    </div>
                    <!-- Widget Area -->
                </div>
            </div>
        </div>
    </body>
    <script>
        window.addEventListener("load", () => {
            const homeBtn = document.querySelector("#homeBtn");
            homeBtn.addEventListener("click", (event) => {
                event.preventDefault();
                location.href = `/border`;
            });
        });
    </script>
</html>
