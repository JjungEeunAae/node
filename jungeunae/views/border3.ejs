<!-- @format -->

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>소개</title>
    <link
      href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css"
    />
    <link
      href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css"
    />
    <link
      href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="./stylesheets/border.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <% if(islogin){ %>
        <h2 style="color: rgb(0, 0, 0)">
          <i class="fa fa-child" aria-hidden="true"></i> <%=userid%> 님
          <span style="color: blue">환영합니다!</span>
          <i class="fa fa-child" aria-hidden="true"></i>
        </h2>
        <% }else{ %>
        <h2 style="color: rgb(0, 0, 0)">
          <i class="fa fa-child" aria-hidden="true"></i> Guest모드
          <span style="color: blue">환영합니다!</span>
          <i class="fa fa-child" aria-hidden="true"></i>
        </h2>
        <% } %>
        <div role="tabpanel">
          <div class="col-sm-3">
            <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">
              <li role="presentation" class="brand-nav active">
                <a
                  href="/border"
                  aria-controls="tab1"
                  role="tab"
                  data-toggle="tab"
                  >자유게시판</a
                >
              </li>
              <li role="presentation" class="brand-nav active">
                <a
                  href="/notice"
                  aria-controls="tab3"
                  role="tab"
                  data-toggle="tab"
                  >공지사항</a
                >
              </li>
              <li role="presentation" class="brand-nav active">
                <a
                  href="/border3"
                  aria-controls="tab4"
                  role="tab"
                  data-toggle="tab"
                  >인기검색어</a
                >
              </li>
            </ul>
          </div>
          <div class="col-sm-9">
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="tab1">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">인기검색어를 한눈에!</th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
