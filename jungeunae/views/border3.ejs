<!-- @format -->

<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>movie API</title>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <link href="./stylesheets/border.css" rel="stylesheet" />
        <style>
            #input {
                width: 83%;
                height: 32px;
                font-size: 15px;
                border: 0;
                border-radius: 15px;
                outline: none;
                padding-left: 10px;
                background-color: rgb(233, 233, 233);
            }
            #search {
                width: 15%;
            }
            table {
                width: 100%;
                height: 700px;
            }
            table,
            tr,
            th,
            td {
                text-align: center;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <hr />
                <% if(islogin){ %>
                <h3 style="color: rgb(0, 0, 0); text-align: center">
                    <i class="fa fa-child" aria-hidden="true"></i> <%=userid%>,
                    <span style="color: rgb(0, 183, 255)">WELLCOME!</span>
                    <i class="fa fa-child" aria-hidden="true"></i>
                </h3>
                <hr />
                <button id="logout">로그아웃</button>
                <% }else{ %>
                <h2 style="color: rgb(0, 0, 0)">
                    <i class="fa fa-child" aria-hidden="true"></i> Guest모드,
                    <span style="color: rgb(0, 183, 255)">WELLCOME!</span>
                    <i class="fa fa-child" aria-hidden="true"></i>
                </h2>
                <% } %>
                <div role="tabpanel">
                    <div class="col-sm-3">
                        <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">
                            <li role="presentation" class="brand-nav active">
                                <a href="/border" aria-controls="tab1" role="tab" data-toggle="tab">자유게시판</a>
                            </li>
                            <li role="presentation" class="brand-nav active">
                                <a href="/notice" aria-controls="tab3" role="tab" data-toggle="tab">공지사항</a>
                            </li>
                            <li role="presentation" class="brand-nav active">
                                <a href="/border3" aria-controls="tab4" role="tab" data-toggle="tab">API</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-9">
                        <div class="tab-content">
                            <div class="eight">
                                <h1>Movie Rank</h1>
                            </div>
                            <input id="input" placeholder="yyyymmdd" /><button id="search">조회</button>
                            <div role="tabpanel" class="tab-pane active" id="tab1">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>순위</th>
                                            <th>개봉일</th>
                                            <th>영화명</th>
                                        </tr>
                                    </thead>
                                    <tbody id="result"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            window.addEventListener("load", () => {
                const logoutBtn = document.querySelector("#logout");
                logoutBtn
                    ? logoutBtn.addEventListener("click", (e) => {
                          e.preventDefault();
                          location.href = "/users/logout";
                      })
                    : false;
            });

            search.addEventListener("click", () => {
                if (input.value !== "") {
                    let xhr = new XMLHttpRequest();
                    xhr.onload = () => {
                        callback(xhr);
                    };
                    let url =
                        "https://kobis.or.kr/kobisopenapi/webservice/rest/boxoffice/searchDailyBoxOfficeList.json?key=f5eef3421c602c6cb7ea224104795888&targetDt=" +
                        input.value;
                    xhr.open("get", url);
                    xhr.send();
                } else {
                    alert("입력값이 없습니다");
                }
            });

            function callback(xhr) {
                let movies = JSON.parse(xhr.response);
                let mvlist = movies.boxOfficeResult.dailyBoxOfficeList;
                result.innerHTML = "";
                for (let i = 0; i < mvlist.length; i++) {
                    let td = `<tr>
                                <td class="no">★ ${mvlist[i].rank}위 ★</td>
                                <td class="cd">${mvlist[i].openDt}</td>
                                <td class="title">${mvlist[i].movieNm}</td>
                            </tr>`;
                    result.innerHTML += td;
                }
            }
        </script>
    </body>
</html>
